{
  "name": "electron-print-app",
  "version": "1.0.3",
  "description": "基于Electron的桌面打印应用",
  "main": "electron/main.js",
  "private": true,
  "scripts": {
    "postinstall": "cd frontend/print-client && pnpm install",
    "build:backend": "cd backend && mvn clean package -DskipTests",
    "start:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend/print-client && npm run build",
    "start:electron": "cross-env NODE_ENV=development electron .",
    "dev": "concurrently \"npm run start:frontend\" \"npm run start:electron\"",
    "build": "npm run build:backend && npm run build:frontend",
    "package": "electron-builder",
    "package:win": "electron-builder --win",
    "package:win32": "electron-builder --win --ia32",
    "package:win64": "electron-builder --win --x64",
    "package:win-all": "electron-builder --win --ia32 --x64",
    "release": "npm run build && npm run package",
    "release-all": "npm run build && npm run package:win-all"
  },
  "keywords": [
    "electron",
    "spring-boot",
    "printer",
    "vue"
  ],
  "author": "Your Company",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^19.0.0",
    "electron-builder": "^24.13.3",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^6.6.2",
    "find-free-port": "^2.0.0",
    "fs-extra": "^11.3.0",
    "graceful-fs": "^4.2.11",
    "jsonfile": "^6.1.0",
    "universalify": "^2.0.1"
  },
  "build": {
    "appId": "com.example.print-app",
    "productName": "打印服务桌面版",
    "directories": {
      "output": "dist"
    },
    "asar": true,
    "files": [
      "electron/**/*",
      "frontend/print-client/dist/**/*",
      "package.json",
      "node_modules/electron-log/**/*",
      "node_modules/graceful-fs/**/*",
      "node_modules/fs-extra/**/*",
      "node_modules/universalify/**/*",
      "node_modules/find-free-port/**/*",
      "node_modules/jsonfile/**/*",
      "node_modules/electron-updater/**/*"
    ],
    "extraFiles": [
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "graceful-fs/**/*",
          "fs-extra/**/*",
          "universalify/**/*",
          "jsonfile/**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "backend/target",
        "to": "backend",
        "filter": [
          "*.jar"
        ]
      },
      {
        "from": "jre-x64",
        "to": "jre-x64",
        "filter": ["**/*"]
      },
      {
        "from": "jre-ia32",
        "to": "jre-ia32",
        "filter": ["**/*"]
      },
      {
        "from": "build/icons",
        "to": "icons"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://119.91.239.47/updates/"
      }
    ]
  }
}
